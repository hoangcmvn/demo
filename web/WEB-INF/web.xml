        <url-pattern>/admin/student/view-account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>waitingBorrowController</servlet-name>
        <url-pattern>/borrow</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
