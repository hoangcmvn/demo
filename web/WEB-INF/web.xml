    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListAllBooksController</servlet-name>
        <url-pattern>/books</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertCategory</servlet-name>
        <url-pattern>/admin/category/insert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertPublisher</servlet-name>
